{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Xprime",
  "scopeName": "source.xp",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.number-sign.xp",
        "match": "#.*$"
      }]
    },
    "keywords": {
      "patterns": [{
        "name": "keyword.control.xp",
        "match": "\\b(if|for|while|return|class|constructor|create)\\b"
      },
      {
        "name": "storage.type.xp",
        "match": "\\b(any|int|float|str|arr|uint8|uint16|bool|static)\\b"
      }]
    },
    "constants": {
      "patterns": [{
        "name": "constant.language.boolean.xp",
        "match": "\\b(true|false)\\b"
      },
      {
        "name": "constant.character.escape.xp",
        "match": "/\\\\(s|n|t)/"
      }]
    },
    "strings": {
      "patterns": [{
        "name": "string.quoted.double.xp",
        "begin": "\"", "end": "\""
      },
      {
        "name": "string.quoted.single.xp",
        "begin": "'", "end": "'"
      },
      {
        "name": "string.quoted.backtick.xp",
        "begin": "`", "end": "`"
      }]
    },
    "numbers": {
      "patterns": [{
        "name": "constant.numeric.xp",
        "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
      }]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.xp",
        "match": "(\\+|\\-|\\*|\\/|\\=|\\>|\\<|\\%|\\!|\\&\\&|\\|\\||\\-\\>|\\*\\*|\\+\\=|\\-\\=|\\*\\=|\\/\\=)"
      }]
    }
  }
}
